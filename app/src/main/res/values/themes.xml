<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CanteenGo" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Brand colors -->
        <item name="colorPrimary">@color/cg_primary</item>
        <item name="colorOnPrimary">@color/cg_on_primary</item>
        <item name="colorSecondary">@color/cg_secondary</item>
        <item name="colorOnSecondary">@color/cg_on_secondary</item>

        <!-- Global surfaces -->
        <item name="android:windowBackground">@color/cg_background</item>
        <item name="colorSurface">@color/cg_surface</item>

        <!-- Darker text colors for better readability -->
        <item name="android:textColorPrimary">#111827</item>
        <item name="android:textColorSecondary">#374151</item>
        <item name="android:textColorHint">#6B7280</item>
        <item name="android:editTextColor">#111827</item>

        <!-- TextInputLayout styling -->
        <item name="textInputStyle">@style/Widget.CanteenGo.TextInputLayout</item>

        <!-- Optional: nicer default rounded shapes -->
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.CanteenGo.MediumComponent</item>
    </style>

    <!-- Custom TextInputLayout style with dark text -->
    <style name="Widget.CanteenGo.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@color/cg_primary</item>
        <item name="boxStrokeColor">@color/cg_primary</item>
    </style>

    <style name="Widget.CanteenGo.TextInputEditText" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="android:textColor">#111827</item>
        <item name="android:textColorHint">#6B7280</item>
    </style>

    <style name="ShapeAppearance.CanteenGo.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="RoundedCorner12" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="Theme.CanteenGo" parent="Base.Theme.CanteenGo" />
</resources>